{
    "name": "@rzuppur/recs",
    "description": "Minimal entity component system for 2D game development in JS/TS",
    "author": "Reino Zuppur",
    "version": "0.1.82",
    "licence": "MIT",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && cross-env NODE_ENV=production rollup --config",
        "build:demo": "rimraf demo/js && cross-env NODE_ENV=production TARGET=demo rollup --config",
        "dev": "cross-env NODE_ENV=dev TARGET=demo rollup --config -w",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "esbuild": "^0.15.18",
        "rimraf": "^3.0.2",
        "rollup": "^3.7.2",
        "rollup-plugin-dts": "^5.0.0",
        "rollup-plugin-esbuild": "^5.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^2.0.2",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    },
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "typings": "dist/index.d.ts",
    "typescript": {
        "definition": "dist/index.d.ts"
    }
}
