{
    "name": "@rzuppur/recs",
    "description": "Minimal entity component system for 2D game development in JS/TS",
    "author": "Reino Zuppur",
    "version": "0.1.83",
    "licence": "MIT",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && cross-env NODE_ENV=production rollup --config",
        "build:demo": "rimraf demo/js && cross-env NODE_ENV=production TARGET=demo rollup --config",
        "dev": "cross-env NODE_ENV=dev TARGET=demo rollup --config -w",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "esbuild": "^0.19.5",
        "rimraf": "^5.0.5",
        "rollup": "^4.3.1",
        "rollup-plugin-dts": "^6.1.0",
        "rollup-plugin-esbuild": "^6.1.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^2.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "typings": "dist/index.d.ts",
    "typescript": {
        "definition": "dist/index.d.ts"
    }
}
