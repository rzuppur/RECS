{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": [
            "dom",
            "es2022"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/benchmark/**/*",
        "src/demo/**/*",
        "src/lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
